<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackComent">

    <ImageView
        android:id="@+id/img_coment_usuario"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/a1" />

    <TextView
        android:id="@+id/txt_coment_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/img_coment_usuario"
        android:layout_marginStart="82dp"
        android:text="Nome usuÃ¡rio"
        android:textColor="@color/CordoBotao" />

    <EditText
        android:id="@+id/edt_coment_conteudo"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_coment_nome"
        android:layout_below="@+id/img_coment_usuario"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/txt_coment_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_coment_conteudo"
        android:layout_alignTop="@+id/img_coment_usuario"
        android:text="Hora" />

    <TextView
        android:id="@+id/txt_coment_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_coment_usuario"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/txt_coment_hora"
        android:text="Data" />

    <View
        android:id="@+id/linha_comentario"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edt_coment_conteudo"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
