<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity_publicacao">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="369dp"
        android:layout_height="183dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp">

            <ImageView
                android:id="@+id/imagemUsuario"
                android:layout_width="95dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Nome da person" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Há 10 min" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#fafafa"
                tools:srcCompact="@drawable/ic_more"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txtConteudoPub"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Alguma publicação." />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="99dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:background="#fafafa"
            android:src="@drawable/coment" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="149dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="95dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Nome da person" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Algum comentário." />


        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="439dp">


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#fafafa"
                tools:srcCompact="@drawable/ic_like" />

            <Button
                android:id="@+id/button2"
                android:layout_width="8dp"
                android:layout_height="45dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:text="denunciar" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>