<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_pub_viewholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_pub_usuario"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        />

    <TextView
        android:id="@+id/txt_pub_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/img_pub_usuario"
        android:text="Nome do usuÃ¡rio"/>

    <EditText
        android:id="@+id/edt_pub_conteudo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pub_usuario"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/img_pub_usuario"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_pub_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/img_pub_usuario"
        android:text="Data"
        android:layout_below="@id/edt_pub_conteudo"/>

    <TextView
        android:id="@+id/txt_pub_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_pub_data"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/txt_pub_data"
        android:text="Hora"/>

    <View
        android:id="@+id/linha1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_pub_data"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txtNumeroPub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_pub_usuario"
        android:layout_toEndOf="@+id/edt_pub_conteudo"
        android:visibility="invisible" />

</RelativeLayout>
